<div class="container">
    <h2>Xizmatlar</h2>
    <table class="table table-striped table-centered mb-0">
        <thead>
            <tr>
                <th>Sarlavha</th>  
                <th>Video</th>
                <th>Tahrirlash</th> 
            </tr>
        </thead>
        <tbody>
            <% for (let item of services) { %>
            <tr>
                <td><%= item.title %></td>
                <td><%= item.video %></td>
                <td class="table-action">
                    <a href="<%=`/services/${item._id}`%>" class="action-icon"> <i class="mdi mdi-pencil"></i></a>
                <form method="POST" class="hidden-r" action="<%=`/services/delete/${item._id}?_method=DELETE`%>">
                        <button type="submit">
                           <i class="mdi mdi-delete"></i>
                        </button>
                </form>
                </td>
            </tr> 
            <%}%> 
        </tbody>
    </table> 
</div>