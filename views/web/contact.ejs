<section class="wpo-contact-form-map section-padding">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="row">
          <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="contact-form">
              <h2>Xabar junatish</h2>
              <form
                action="/contact/add"
                method="POST"
              >
                <div>
                  <input
                    type="text"
                    class="form-control"
                    name="name"
                    id="user_id"
                    placeholder="Ismingizni yozing"
                  />
                </div>

                <div>
                  <input
                    type="number"
                    name="phone"
                    class="form-control"
                    id="phone_content"
                    placeholder="Telefon raqamingizni yozing"
                  />
                </div>
                <div>
                  <textarea
                    class="form-control"
                    name="message"
                    id="message_content"
                    placeholder="Savolingizni yozing..."
                  ></textarea>
                </div>
                <div class="submit-area">
                  <button class="theme-btn submit-btn">Jo'natish</button>
                  <div id="loader">
                    <i class="ti-reload"></i>
                  </div>
                </div>
                <div class="clearfix error-handling-messages">
                  <div id="success">Savolingiz junatildi</div>
                  <div id="error">
                    Error occurred while sending email. Please try again later.
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="contact-map">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12706.482042563403!2d67.2576706!3d37.2329827!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3f353124b2922d73%3A0xd5a3f1353b1e0063!2sHakim%20Termiziy%20masjidi!5e0!3m2!1sen!2s!4v1676178239877!5m2!1sen!2s"
                width="100%"
                height="100%"
                style="border: 0"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
              ></iframe>
            </div>
          </div>
        </div>

        <div class="wpo-contact-info">
          <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
              <div class="info-item">
                <h4>Shimoliy darvoza Saxovat mahallasi 1 uy</h4>
                <div class="info-wrap">
                  <div class="info-icon">
                    <i class="ti-world"></i>
                  </div>
                  <div class="info-text">
                    <span>Manzil</span>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
              <div class="info-item">
                <h4>habibullohsaidovuz@gmail.com</h4>
                <div class="info-wrap">
                  <div class="info-icon-2">
                    <i class="fi flaticon-envelope"></i>
                  </div>
                  <div class="info-text">
                    <span>Gmail</span>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
              <div class="info-item">
                <h4>+998 99 741 13 17</h4>
                <div class="info-wrap">
                  <div class="info-icon-3">
                    <i class="ti-headphone-alt"></i>
                  </div>
                  <div class="info-text">
                    <span>Telefon raqam</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
